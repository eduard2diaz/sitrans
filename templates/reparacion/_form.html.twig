{{form_start(form,{'attr':{
    'id': form_id|default('reparacion_new'),
    'class': 'm-form m-form--state'
}})}}

<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group m-form__group">
                <label>
                    {{form_label(form.vehiculo)}}
                </label>
                <div>
                    {{form_widget(form.vehiculo)}}
                    {{form_errors(form.vehiculo)}}
                </div>
            </div>
            {{ form_errors(form) }}
        </div>
         <div class="col-md-4">
             <div class="form-group m-form__group">
                 <label>
                     {{form_label(form.fechainicio)}}
                 </label>
                 <div>
                     {{form_widget(form.fechainicio)}}
                     {{form_errors(form.fechainicio)}}
                 </div>
             </div>
        </div>
        <div class="col-md-4">
            <div class="form-group m-form__group">
                <label>
                    {{form_label(form.fechafin)}}
                </label>
                <div>
                    {{form_widget(form.fechafin)}}
                    {{form_errors(form.fechafin)}}
                </div>
            </div>
        </div>
    </div>

    <div class="row margin-top-10">
        <div class="col-md-12">
            <div class="form-group m-form__group">
                <label>
                    {{form_label(form.descripcion)}}
                </label>
                <div>
                    {{form_widget(form.descripcion)}}
                    {{form_errors(form.descripcion)}}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-metal" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    <button class="btn btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit-1 ladda-label"></i> {{ action |default('Guardar')}}
        <span class="ladda-spinner"></span>
    </button>
</div>
{{form_end(form)}}

