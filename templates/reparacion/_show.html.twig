<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                Detalles de la reparación
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
        </div>
        <div>
            <div class="modal-body" id="modal-body">
                <table class="table">
                    <tr>
                        <th>Vehiculo</th>
                        <td>{{reparacion.vehiculo}}</td>
                    </tr>
                    <tr>
                        <th>Fecha de inicio</th>
                        <td>{{reparacion.fechainicio | date('d-m-Y H:i')}}</td>
                    </tr>
                    <tr>
                        <th>Fecha de fin</th>
                        <td>{{reparacion.fechafin | date('d-m-Y H:i')}}</td>
                    </tr>
                    <tr>
                        <th>Descripción</th>
                        <td><p>{{reparacion.descripcion}}</p></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <a class="btn btn-metal btn-sm" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
            </div>
        </div>
    </div>
</div>




