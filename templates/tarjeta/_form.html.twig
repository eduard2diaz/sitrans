{{ form_start(form,{'attr':{
    'id': form_id|default('tarjeta_new'),
    'class': 'm-form m-form--state'
}}) }}
<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.codigo) }}
                </label>
                <div>
                    {{ form_widget(form.codigo) }}
                    {{ form_errors(form.codigo) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            {{ form_label(form.activo) }}
            <br/>
            <span class="m-switch m-switch--icon m-switch--success">
				<label>
					{{ form_widget(form.activo) }}
                    <span></span>
			</label>
			</span>
            {{ form_errors(form.activo) }}
        </div>
    </div>
    <div class="row m--margin-top-20">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.tipotarjeta) }}
                </label>
                <div>
                    {{ form_widget(form.tipotarjeta) }}
                    {{ form_errors(form.tipotarjeta) }}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.tipocombustible) }}
                </label>
                <div>
                    {{ form_widget(form.tipocombustible) }}
                    {{ form_errors(form.tipocombustible) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_errors(form) }}
    {{ form_rest(form) }}
</div>
<div class="modal-footer">
    <a class="btn btn-metal btn-sm" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    <button class="btn btn-primary btn-sm mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit-1 ladda-label"></i> {{ action |default('Guardar') }}
        <span class="ladda-spinner"></span>
    </button>
    {% if eliminable is defined and eliminable==true %}
        <a class="btn btn-danger btn-sm eliminar_tarjeta" data-href="{{ path('tarjeta_delete',{'id':tarjeta.id}) }}"><i
                    class="flaticon-delete-1"></i> Eliminar</a>
    {% endif %}
</div>
{{ form_end(form) }}

