<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                Detalles del responsable
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
        </div>
        <div>
            <div class="modal-body" id="modal-body">
                <table class="table table-hover">
                    <tr>
                        <th>Nombre</th>
                        <td>{{responsable.nombre}}</td>
                    </tr>
                    <tr>
                        <th>Apellidos</th>
                        <td>{{responsable.apellidos}}</td>
                    </tr>
                    <tr>
                        <th>Carnet de identidad</th>
                        <td>{{responsable.ci}}</td>
                    </tr>
                    <tr>
                        <th>Institución</th>
                        <td>{{responsable.institucion}}</td>
                    </tr>
                    <tr>
                        <th>Área</th>
                        <td>{{responsable.area}}</td>
                    </tr>
                    <tr>
                        <th>Activo</th>
                        <td>{{responsable.activo | colorear}}</td>
                    </tr>
                    <tr>
                        <th>Tarjetas</th>
                        <td>
                            <ul class="m-nav m-nav--inline">
                                {% for a in responsable.tarjetas%}
                                    <li class="m-nav__item">{{ a.codigo}}</li>
                                {% endfor %}
                            </ul>
                            </td>
                    </tr>
                    <tr>
                        <th>Dirección particular</th>
                        <td><address>{{responsable.direccion}}</address>  </td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <a class="btn btn-metal btn-sm" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
            </div>
        </div>
    </div>
</div>




