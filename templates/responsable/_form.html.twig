{{form_start(form,{'attr':{
    'id': form_id|default('responsable_new')
}})}}

<div class="modal-body" id="modal-body">
    <div class="row pull-right">
    <span class="m-switch m-switch--icon m-switch--success pull-right">
				<label>
					{{form_widget(form.activo)}}
                    <span></span>
			</label>
    </span>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-6">
            {{form_row(form.nombre)}}
        </div>
        <div class="col-md-6">
            {{form_row(form.apellidos)}}
        </div>
    </div>
    <div class="row margin-top-10">
        <div class="col-md-6">
            {{form_row(form.ci)}}
        </div>
    </div>
    <div class="row margin-top-10">
        <div class="col-md-6">
            {{form_row(form.area)}}
        </div>
        <div class="col-md-6">
            {{form_row(form.tarjetas)}}
        </div>
    </div>
    <div class="row margin-top-10">
        <div class="col-md-12">
            {{form_row(form.direccion)}}
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-metal" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    <button class="btn btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit-1 ladda-label"></i> {{ action |default('Guardar')}}
        <span class="ladda-spinner"></span>
    </button>
</div>
{{form_end(form)}}

