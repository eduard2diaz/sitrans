{{form_start(form,{'attr':{
    'id': form_id|default('ccosto_new'),
    'class': 'm-form m-form--state'
}})}}

<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{form_label(form.nombre)}}
                </label>
                <div>
                    {{form_widget(form.nombre)}}
                    {{form_errors(form.nombre)}}
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row m--margin-top-20">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{form_label(form.codigo)}}
                </label>
                <div>
                    {{form_widget(form.codigo)}}
                    {{form_errors(form.codigo)}}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{form_label(form.cuenta)}}
                </label>
                <div>
                    {{form_widget(form.cuenta)}}
                    {{form_errors(form.cuenta)}}
                </div>
            </div>
        </div>
    </div>
    {{ form_errors(form) }}
    {{ form_rest(form) }}
</div>
<div class="modal-footer">
    <a class="btn btn-metal btn-sm" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    <button class="btn btn-primary btn-sm mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit-1 ladda-label"></i> {{ action |default('Guardar')}}
        <span class="ladda-spinner"></span>
    </button>
    {% if eliminable is defined and eliminable==true %}
        <a class="btn btn-danger btn-sm eliminar_centrocosto" data-href="{{ path('centrocosto_delete',{'id':centrocosto.id}) }}"><i class="flaticon-delete-1"></i> Eliminar</a>
    {% endif %}
</div>
{{form_end(form)}}

