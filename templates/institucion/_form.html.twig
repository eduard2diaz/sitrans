{{form_start(form,{'attr':{
    'id': form_id|default('institucion_new'),
    'class': 'm-form m-form--state'
}})}}

<div class="modal-body" id="modal-body">
    <div class="pull-right">
        {{form_label(form.activo)}}
        <span class="m-switch m-switch--icon m-switch--success">
				<label>
					{{form_widget(form.activo)}}
                    <span></span>
			</label>
			</span>
        {{form_errors(form.activo)}}
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{form_label(form.nombre)}}
                </label>
                <div>
                    {{form_widget(form.nombre)}}
                    {{form_errors(form.nombre)}}
                </div>
            </div>
            {{ form_errors(form) }}
        </div>
        <div class="col-md-6">
            <label>
                {{form_label(form.institucionpadre)}}
            </label>
    		<div>
                {{form_widget(form.institucionpadre)}}
                {{form_errors(form.institucionpadre)}}
			</div>

        </div>
        </div>
    <div class="row m--margin-top-20">
         <div class="col-md-6">
             <div class="form-group m-form__group">
                 <label>
                     {{form_label(form.provincia)}}
                 </label>
                 <div>
                     {{form_widget(form.provincia)}}
                     {{form_errors(form.provincia)}}
                 </div>
             </div>
        </div>
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{form_label(form.municipio)}}
                </label>
                <div>
                    {{form_widget(form.municipio)}}
                    {{form_errors(form.municipio)}}
                </div>
            </div>
        </div>
    </div>
    {{ form_errors(form) }}
    {{ form_rest(form) }}
</div>
<div class="modal-footer">
    <a class="btn btn-metal btn-sm" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    <button class="btn btn-primary btn-sm mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit-1 ladda-label"></i> {{ action |default('Guardar')}}
        <span class="ladda-spinner"></span>
    </button>
    {% if eliminable is defined and eliminable==true %}
        <a class="m--font-boldest btn btn-danger m-btn m-btn--icon btn-sm eliminar_institucion" data-href="{{ path('institucion_delete',{'id':institucion.id}) }}"><i class="flaticon-delete-1"></i> Eliminar</a>
    {% endif %}
</div>
{{form_end(form)}}

