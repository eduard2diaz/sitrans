{{form_start(form,{'attr':{
    'id': form_id|default('cupet_new'),
    'class': 'm-form m-form--state'
}})}}

<div class="modal-body" id="modal-body">

    <div class="row">
        <div class="col-md-6">
            <div class="form-group m-form__group">
                <label>
                    {{form_label(form.nombre)}}
                </label>
                <div>
                    {{form_widget(form.nombre)}}
                    {{form_errors(form.nombre)}}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            {{form_label(form.enfuncionamiento)}}
            <br/>
            <span class="m-switch m-switch--icon m-switch--success">
				<label>
					{{form_widget(form.enfuncionamiento)}}
                <span></span>
			</label>
			</span>
            {{form_errors(form.enfuncionamiento)}}
        </div>
    </div>
    <div class="row margin-top-10">
        <div class="col-md-12">
            <div class="form-group m-form__group">
                <label>
                    {{form_label(form.direccion)}}
                </label>
                <div>
                    {{form_widget(form.direccion)}}
                    {{form_errors(form.direccion)}}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-metal" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    <button class="btn btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit-1 ladda-label"></i> {{ action |default('Guardar')}}
        <span class="ladda-spinner"></span>
    </button>
</div>
{{form_end(form)}}

