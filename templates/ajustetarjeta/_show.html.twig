<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                Detalles del ajuste
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
        </div>
        <div>
            <div class="modal-body" id="modal-body">
                <table class="table">
                    <tr>
                        <th>Tarjeta</th>
                        <td>{{ajuste.tarjeta}}</td>
                    </tr>
                    <tr>
                        <th>Tipo</th>
                        <td>{{ajuste.getTipoToString()}}</td>
                    </tr>
                    <tr>
                        <th>Fecha</th>
                        <td>{{ajuste.fecha |date('d-m-Y H:i')}}</td>
                    </tr>
                    <tr>
                        <th>Cantidad de efectivo</th>
                        <td>{{ ajuste.cantefectivo }}</td>
                    </tr>
                    <tr>
                        <th>Usuario</th>
                        <td>{{ ajuste.usuario }}</td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <a class="btn btn-metal btn-sm" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
                {% if eliminable== true %}
                    <a class="btn btn-danger btn-sm eliminar_ajustetarjeta" data-href="{{ path('ajustetarjeta_delete',{'id':ajuste.id}) }}"><i class="flaticon-delete-1"></i> Eliminar</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>




