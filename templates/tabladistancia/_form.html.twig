{{ form_start(form,{'attr':{
    'id': form_id|default('tabladistancia_new'),
    'class': 'm-form m-form--state'
}}) }}
<div class="modal-body" id="modal-body">
    <div class="col-md-12">
        <div class="form-group m-form__group">
            <label>
                {{ form_label(form.origen) }}
            </label>
            <div>
                {{ form_widget(form.origen) }}
                {{ form_errors(form.origen) }}
            </div>
        </div>
    </div>
    <div class="col-md-12 m--margin-top-10">
        <div class="form-group m-form__group">
            <label>
                {{ form_label(form.destino) }}
            </label>
            <div>
                {{ form_widget(form.destino) }}
                {{ form_errors(form.destino) }}
            </div>
        </div>
    </div>
    <div class="col-md-12 m--margin-top-10">
        <div class="form-group m-form__group">
            <label>
                {{ form_label(form.kms) }}
            </label>
            <div>
                {{ form_widget(form.kms) }}
                {{ form_errors(form.kms) }}
            </div>
        </div>
    </div>
    {{ form_errors(form) }}
    {{ form_rest(form) }}
</div>
<div class="modal-footer">
    <a class="btn btn-metal btn-sm" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    <button class="btn btn-primary btn-sm mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit-1 ladda-label"></i> {{ action |default('Guardar') }}
        <span class="ladda-spinner"></span>
    </button>
</div>
{{ form_end(form) }}

