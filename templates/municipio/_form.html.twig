{{ form_start(form,{'attr':{
    'id': form_id|default('municipio_new'),
    'class': 'm-form m-form--state'
}}) }}

<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.nombre) }}
                </label>
                <div>
                    {{ form_widget(form.nombre) }}
                    {{ form_errors(form.nombre) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row m--margin-top-20-desktop">
        <div class="col-md-12">
            <div class="form-group m-form__group">
                <label>
                    {{ form_label(form.provincia) }}
                </label>
                <div>
                    {{ form_widget(form.provincia) }}
                    {{ form_errors(form.provincia) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_errors(form) }}
    {{ form_rest(form) }}
</div>
<div class="modal-footer">
    <a class="btn btn-metal btn-sm" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    <button class="btn btn-primary btn-sm mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit-1 ladda-label"></i> {{ action |default('Guardar') }}
        <span class="ladda-spinner"></span>
    </button>
    {% if eliminable is defined and eliminable==true %}
        <a class="m--font-boldest btn btn-danger m-btn m-btn--icon btn-sm eliminar_municipio" data-href="{{ path('municipio_delete',{'id':municipio.id}) }}"><i class="flaticon-delete-1"></i> Eliminar</a>
    {% endif %}
</div>
{{ form_end(form) }}

