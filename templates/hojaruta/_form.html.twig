{{form_start(form,{'attr':{
    'id': form_id|default('hojaruta_new')
}})}}

<div class="modal-body" id="modal-body">
    <div class="row">
        <div class="col-md-4">
            {{form_row(form.vehiculo)}}
            {{form_errors(form)}}
        </div>
    </div>

    <div class="row margin-top-10">
        <div class="col-md-4">
            {{form_row(form.codigo)}}
        </div>
        <div class="col-md-4">
            {{form_row(form.fechasalida)}}
        </div>
        <div class="col-md-4">
            {{form_row(form.fechallegada)}}
        </div>
    </div>

    <div class="row margin-top-10">
        <div class="col-md-4">
            {{form_row(form.tipoactividad)}}
        </div>
        <div class="col-md-4">
            {{form_row(form.origen)}}
        </div>
        <div class="col-md-4">
            {{form_row(form.destino)}}
        </div>
    </div>

    <div class="row margin-top-10">
        <div class="col-md-4">
            {{form_row(form.kmrecorrido)}}
        </div>
        <div class="col-md-4">
            {{form_row(form.litrosconsumidos)}}
        </div>
        <div class="col-md-4">
            {{form_row(form.importe)}}
        </div>
    </div>
    <div class="row margin-top-10">
        <div class="col-md-12">
            {{form_row(form.descripcion)}}
        </div>
    </div>
</div>
<div class="modal-footer">
    <a class="btn btn-metal" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
    <button class="btn btn-primary mt-ladda-btn ladda-button" data-style="expand-right" type="submit">
        <i class="flaticon-edit-1 ladda-label"></i> {{ action |default('Guardar')}}
        <span class="ladda-spinner"></span>
    </button>
</div>
{{form_end(form)}}

