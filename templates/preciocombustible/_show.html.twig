<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                Detalles del precio
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
        </div>
        <div>
            <div class="modal-body" id="modal-body">
                <table class="table">
                    <tr>
                        <th>Tipo de combustible</th>
                        <td>{{preciocombustible.tipocombustible}}</td>
                    </tr>
                    <tr>
                        <th>Fecha</th>
                        <td>{{preciocombustible.fecha | date('d-m-Y')}}</td>
                    </tr>
                    <tr>
                        <th>Importe</th>
                        <td>{{preciocombustible.importe}}</td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                {% if editable %}
                    <a class="btn btn-info btn-sm edicion" data-href="{{ path('preciocombustible_edit',{'id':preciocombustible.id}) }}"><i class="flaticon-edit-1"></i> Editar</a>
                    <a class="btn btn-danger btn-sm eliminar_preciocombustible" data-href="{{ path('preciocombustible_delete',{'id':preciocombustible.id}) }}"><i class="flaticon-delete-1"></i> Eliminar</a>
                {% endif %}
                <a class="btn btn-metal btn-sm" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
            </div>
        </div>
    </div>
</div>