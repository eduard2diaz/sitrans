<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                Detalles del reloj
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
        </div>
        <div>
            <div class="modal-body" id="modal-body">
                <table class="table">
                    <tr>
                        <th>Código</th>
                        <td>{{reloj.codigo}}</td>
                    </tr>
                    <tr>
                        <th>Área</th>
                        <td>{{reloj.area}}</td>
                    </tr>
                    <tr>
                        <th>Activo</th>
                        <td>{{reloj.activo| colorear}}</td>
                    </tr>
                    <tr>
                        <th>Kilowatts restantes</th>
                        <td>{{reloj.kwrestante}}</td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <a class="btn btn-metal" data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
            </div>
        </div>
    </div>
</div>




