<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">
                Detalles de la recarga
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
        </div>
        <div>
            <div class="modal-body" id="modal-body">
                <table class="table">
                    <tr>
                        <th>Reloj</th>
                        <td>{{recarga.reloj}}</td>
                    </tr>
                    <tr>
                        <th>Fecha</th>
                        <td>{{recarga.fecha |date('d-m-Y H:i')}}</td>
                    </tr>
                    <tr>
                        <th>Código STS</th>
                        <td>{{recarga.codigosts}}</td>
                    </tr>
                    <tr>
                        <th>Asignación</th>
                        <td>{{recarga.asignacion}}</td>
                    </tr>
                    <tr>
                        <th>Folio 00</th>
                        <td>{{recarga.folio00}}</td>
                    </tr>
                    <tr>
                        <th>Usuario</th>
                        <td>{{recarga.usuario}}</td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <a class="btn btn-metal btn-sm " data-dismiss="modal"><i class="flaticon-cancel"></i> Cancelar</a>
                {% if eliminable==true%}
                    <a class="btn btn-danger btn-sm eliminar_recargakw" data-dismiss="modal" data-href="{{ path('recargakw_delete',{'id':recarga.id}) }}"><i class="flaticon-delete-1"></i> Eliminar</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>




